<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".StartActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end">

            <ImageView
                android:layout_width="20dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/img_3"
                android:layout_height="20dp"/>

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_weight="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom"
        android:orientation="vertical"
        android:layout_weight="1">
        <ImageView
            android:layout_width="140dp"
            android:src="@drawable/img_2"
            android:layout_height="140dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="13dp"
            android:text="Telegram"
            android:textColor="#000000"
            android:textSize="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="The world's fastest messaging app.\n It is free and secure."
            android:textColor="#474347"
            android:textSize="15dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom"
        android:orientation="horizontal"
        android:layout_weight="15">

        <ImageView
            android:layout_width="7dp"
            android:background="@drawable/iv_stil2"
            android:layout_height="7dp"/>

        <ImageView
            android:layout_width="7dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/iv_stil"
            android:layout_height="7dp"/>

        <ImageView
            android:layout_width="7dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/iv_stil"
            android:layout_height="7dp"/>

        <ImageView
            android:layout_width="7dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/iv_stil"
            android:layout_height="7dp"/>

        <ImageView
            android:layout_width="7dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/iv_stil"
            android:layout_height="7dp"/>

        <ImageView
            android:layout_width="7dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/iv_stil"
            android:layout_height="7dp"/>

    </LinearLayout>



</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/b_start"
                android:layout_width="350dp"
                android:background="@drawable/b_stil"
                app:backgroundTint="@null"
                android:text="Start Messaging"
                android:layout_height="45dp"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>